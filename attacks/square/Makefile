# Variables
EXE = square_test

# Usual compilation flags
CFLAGS = -Wall -Wextra -g -O2
CPPFLAGS = -I../../include -DDEBUG

# Special rules and targets
.PHONY: all clean help

# Rules and targets
all: square_test

square_test: utils.o square.o square_test.o
	$(CC) $(CFLAGS) -o $@ $^ $(LDFLAGS)
	@rm -f *.o

utils.o: ../../src/utils.c ../../include/utils.h
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $<

square.o: square.c ../../include/square.h
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $<

square_test.o: square_test.c ../../include/utils.h ../../include/square.h
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $<

clean:
	@rm -f *~ *.o $(EXE)

help:
	@echo "Usage:"
	@echo " make [all]\t\tBuild the software"
	@echo " make clean\t\tRemove all files generated by make"
	@echo " make help\t\tDisplay this help"
